    {
      "name": "Autenticación",
      "item": [
        {
          "name": "Registro de Usuario",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"leonel\",\n  \"email\": \"leonel@example.com\",\n  \"password\": \"Secure123!\",\n  \"nombre\": \"Leonel\",\n  \"apellido\": \"Amado\",\n  \"direccion\": \"Calle Principal 123\",\n  \"telefono\": \"555-1234\",\n  \"mascotas\": [\"Firulais\", \"Michi\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            },
            "description": "Registra un nuevo usuario en el sistema"
          },
          "response": []
        },
        {
          "name": "Login de Usuario",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const jsonData = pm.response.json();",
                  "pm.environment.set(\"token\", jsonData.token);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"leonel@example.com\",\n  \"password\": \"Secure123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            },
            "description": "Autentica un usuario y devuelve un token JWT"
          },
          "response": []
        }
      ],
      "description": "Endpoints de autenticación y autorización"
    },
